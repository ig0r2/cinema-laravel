{% extends '@components/layout.twig' %}
{% block content %}
    <div class="max-w-md mx-auto px-4 py-8 mt-8 bg-slate-800 rounded-lg shadow-lg">
        <div class="flex flex-col gap-2">
            <p>
                <span class="text-gray-400">Ime:</span>
                {{ user.name }}
            </p>
            <p>
                <span class="text-gray-400">Email:</span>
                {{ user.email }}
            </p>
            <p>
                <span class="text-gray-400">Datum pridruživanja:</span>
                {{ user.created_at|date('d.m.Y.') }}
            </p>
            <div class="flex gap-2 justify-center">
                {% set selectedClass =
                    'bg-slate-700 text-white rounded-md px-4 py-2'
                %}
                {% set unselectedClass =
                    'bg-white text-black rounded-md px-4 py-2 hover:bg-blue-500 hover:text-white cursor-pointer'
                %}
                <form action="{{ route('admin.users.update', user.id) }}"
                    method="POST">
                    {{ csrf_field() }}
                    <input type="hidden" name="role" value="0" />
                    <button type="submit"
                        class="{{
                        user.role is same as(0)
                            ? selectedClass
                            : unselectedClass
                        }}">
                        Korisnik
                    </button>
                </form>
                <form action="{{ route('admin.users.update', user.id) }}"
                    method="POST">
                    {{ csrf_field() }}
                    <input type="hidden" name="role" value="1" />
                    <button type="submit"
                        class="{{
                        user.role is same as(1)
                            ? selectedClass
                            : unselectedClass
                        }}">
                        Menadžer
                    </button>
                </form>
                <form action="{{ route('admin.users.update', user.id) }}"
                    method="POST">
                    {{ csrf_field() }}
                    <input type="hidden" name="role" value="2" />
                    <button type="submit"
                        class="{{
                        user.role is same as(2)
                            ? selectedClass
                            : unselectedClass
                        }}">
                        Administrator
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
