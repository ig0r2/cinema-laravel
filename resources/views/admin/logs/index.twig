{% extends '@components/layout.twig' %}
{% block content %}
    <div class="container mx-auto p-4">
        <div class="my-2">
            <h1 class="text-2xl font-bold text-center">
                Logovi korisnika
            </h1>
        </div>
        {% for log in logs %}
            <div class="w-full flex items-center mt-2 p-2 gap-2 bg-slate-800 rounded-md">
                <p>
                    {{ log.message }}
                </p>
                <p class="ms-auto text-sm text-gray-400">
                    {{ log.timestamp|date('d.m.Y H:i:s') }}
                </p>
            </div>
        {% endfor %}
        <div class="p-4">
            {{ logs.links|raw }}
        </div>
    </div>
{% endblock %}
