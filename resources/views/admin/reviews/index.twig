{% extends '@components/layout.twig' %}
{% set title = 'Recenzije | Bioskop' %}
{% block content %}
    <div class="max-w-4xl mx-auto p-4 flex flex-col items-center">
        <div class="my-2">
            <h1 class="text-2xl font-bold text-center">
                Recenzije
            </h1>
        </div>
        {% for review in reviews %}
            <div class="mt-4 container flex flex-col gap-2 p-4 rounded-lg border border-gray-300 bg-gray-900">
                <p>
                    <span class="text-gray-400">Film:</span>
                    <a href="{{ route('movies.show', review.movie) }}"
                        class="text-blue-500 hover:underline">
                        {{ review.movie.title }} ({{
                            review.movie.release_date.year
                        }})
                    </a>
                </p>
                <p>
                    <span class="text-gray-400">Korisnik:</span>
                    <a href="{{ route('admin.users.show', review.user) }}"
                        class="text-blue-500 hover:underline">
                        {{ review.user.name }}
                    </a>
                </p>
                <p>
                    <span class="text-gray-400">Ocena:</span>
                    {{ review.rating }}
                </p>
                <p>
                    <span class="text-gray-400">Komentar:</span>
                    {{ review.content }}
                </p>
                <p>
                    <span class="text-gray-400">Vreme:</span>
                    {{ review.created_at|date('d.m.Y. H:i') }}
                </p>
                <a href="{{ route('admin.reviews.destroy', review) }}"
                    class="text-red-500 hover:underline">
                    Obri≈°i
                </a>
            </div>
        {% else %}
            <p class="mt-4 text-gray-400">
                Nema recenzija
            </p>
        {% endfor %}
        <div class="p-4">
            {{ reviews.links|raw }}
        </div>
    </div>
{% endblock %}
