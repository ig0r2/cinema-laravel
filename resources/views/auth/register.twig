{% extends '@components/layout.twig' %}
{% block content %}
    <div class="w-full sm:max-w-md mx-auto p-6 my-2 relative rounded-md bg-slate-800">
        <form action="" method="POST">
            {{ csrf_field() }}
            <h2 class="text-lg text-center">
                Registracija
            </h2>
            <div class="flex flex-col mt-4">
                <label for="name" class="text-white">Ime *</label>
                <input type="text"
                    name="name"
                    id="name"
                    value="{{ old('name') }}"
                    class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                    required
                    autofocus />
            </div>
            {% if errors.has('name') %}
                <p class="text-red-500 text-sm mt-1">
                    {{ errors.first('name') }}
                </p>
            {% endif %}
            <div class="flex flex-col mt-4">
                <label for="email" class="text-white">E-mail *</label>
                <input type="email"
                    name="email"
                    id="email"
                    value="{{ old('email') }}"
                    class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                    required />
            </div>
            {% if errors.has('email') %}
                <p class="text-red-500 text-sm mt-1">
                    {{ errors.first('email') }}
                </p>
            {% endif %}
            <div class="flex flex-col mt-4">
                <label for="password" class="text-white">Lozinka *</label>
                <input type="password"
                    name="password"
                    id="password"
                    class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                    required />
            </div>
            {% if errors.has('password') %}
                <p class="text-red-500 text-sm mt-1">
                    {{ errors.first('password') }}
                </p>
            {% endif %}
            <div class="flex flex-col mt-4">
                <label for="password_confirmation" class="text-white">
                    Potvrdi lozinku *
                </label>
                <input type="password"
                    name="password_confirmation"
                    id="password_confirmation"
                    class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                    required />
            </div>
            <div class="flex gap-2 items-center justify-between mt-4">
                <a href="{{ route('login') }}"
                    class="text-gray-400 hover:text-gray-300">
                    VeÄ‡ imate nalog?
                </a>
                <input type="submit"
                    value="Registruj se"
                    class="bg-white text-black rounded-md px-4 py-2 hover:bg-blue-500 hover:text-white cursor-pointer" />
            </div>
        </form>
    </div>
{% endblock %}
