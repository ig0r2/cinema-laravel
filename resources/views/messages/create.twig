{% extends '@components/layout.twig' %}
{% block content %}
    <div class="w-full sm:max-w-md mx-auto p-4 rounded-md bg-slate-800">
        <p class="text-2xl font-bold text-center mt-4 mb-4">
            Poruka
        </p>
        <form action="{{ route('messages.store') }}"
            method="POST"
            class="flex flex-col gap-4 max-w-lg mx-auto">
            {{ csrf_field() }}
            <div class="flex flex-col gap-2">
                <label for="rating" class="text-gray-400">Naslov</label>
                <input type="text"
                    name="subject"
                    id="subject"
                    class="rounded-md p-2 bg-gray-900"
                    value="{{ old('subject') }}"
                    required />
            </div>
            <div class="flex flex-col gap-2">
                <label for="content" class="text-gray-400">Sadr≈æaj</label>
                <textarea name="content"
                    id="content"
                    cols="30"
                    rows="10"
                    class="rounded-md p-2 bg-gray-900"
                    value="{{ old('content') }}"
                    required></textarea>
            </div>
            <div class="flex justify-center">
                <button type="submit"
                    class="bg-gray-900 rounded-md p-2 hover:bg-blue-800">
                    Ostavi poruku
                </button>
            </div>
        </form>
    </div>
{% endblock %}
