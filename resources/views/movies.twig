{% extends '@components/layout.twig' %}
{% block content %}
    <div class="container mx-auto flex flex-col p-4">
        <div class="w-full">
            <h1 class="text-3xl font-bold text-center">
                Movies
            </h1>
        </div>
        {% for movie in movies %}
            <div class="w-full flex flex-row p-4 my-4 bg-gray-800 rounded-md">
                <div class="w-1/4">
                    <img src="{{ movie.image_url }}"
                        alt="{{ movie.title }}"
                        class="w-full p-4" />
                </div>
                <div class="w-3/4 p-4">
                    <h2 class="text-2xl font-bold">
                        {{ movie.title }}
                    </h2>
                    <p class="text-gray-400">
                        Released: {{ movie.release_date }}
                    </p>
                    <p class="text-gray-400">
                        Runtime: {{ movie.runtime }}
                    </p>
                    <p class="text-gray-400">
                        Genres:{% for genre in movie.genres %}
                            {{ genre.name }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </p>
                    <p class="text-gray-400">
                        Directors:{% for director in movie.directors %}
                            {{ director.name }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </p>
                    <p class="text-gray-400">
                        Actors:{% for actor in movie.actors %}
                            {{ actor.name }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
