{
  "overrides": [
    {
      "files": ["*.css"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.js"],
      "options": {
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.php",
      "options": {
        "parser": "php",
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "endOfLine": "lf"
      }
    }
  ]
}
