{% extends '@components/layout.twig' %}
{% block content %}
    <div class="w-full sm:max-w-md mx-auto p-4 rounded-md bg-slate-800">
        <p class="text-2xl font-bold text-center mt-4 mb-4">
            Poruka
        </p>
        <div class="flex flex-col gap-4 max-w-lg mx-auto">
            <div class="flex flex-col gap-2">
                <p class="text-gray-400">
                    Naslov
                </p>
                <p>
                    {{ message.subject }}
                </p>
            </div>
            <div class="flex flex-col gap-2">
                <p class="text-gray-400">
                    Sadr≈æaj
                </p>
                <p>
                    {{ message.content }}
                </p>
            </div>
            {% if message.reply is not null %}
                <div class="flex flex-col gap-2">
                    <p class="text-gray-400">
                        Odgovor
                    </p>
                    <p>
                        {{ message.reply }}
                    </p>
                </div>
            {% else %}
                <form action="{{ route('admin.messages.reply', message) }}"
                    method="POST">
                    {{ csrf_field() }}
                    <div class="flex flex-col gap-2">
                        <label for="reply" class="text-gray-400">Odgovor</label>
                        <textarea name="reply"
                            id="reply"
                            cols="30"
                            rows="10"
                            class="rounded-md bg-slate-700 p-2"></textarea>
                    </div>
                    <div class="mt-2 flex justify-end">
                        <button type="submit"
                            class="rounded-md bg-slate-700 p-2 hover:bg-blue-700 hover:text-white">
                            Odgovori
                        </button>
                    </div>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
