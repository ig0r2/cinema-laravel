{% extends '@components/layout.twig' %}
{% block content %}
    <div class="container mx-auto p-4">
        <div class="my-2">
            <h1 class="text-2xl font-bold text-center">
                Glumci
            </h1>
            <div class="flex mt-2">
                <a href="{{ route('actors.create') }}"
                    class="ms-auto px-2 p-1 rounded-md bg-blue-500 hover:bg-blue-700">
                    Dodaj glumca
                </a>
            </div>
        </div>
        {% for actor in actors %}
            <div class="w-full flex items-center mt-2 p-2 gap-2 bg-slate-800 rounded-md">
                <p>
                    {{ actor.name }}
                </p>
                <a href="{{ route('actors.edit', actor.id) }}"
                    class="ms-auto px-2 p-1 rounded-md bg-blue-500 hover:bg-blue-700">
                    Izmeni
                </a>
                <a href="{{ route('actors.destroy', actor.id) }}"
                    class="px-2 p-1 rounded-md bg-red-500 hover:bg-red-800">
                    Obri≈°i
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
