{% extends '@components/layout.twig' %}
{% set title = 'Filmovi | Bioskop' %}
{% block content %}
    <div class="container mx-auto p-4">
        <div class="my-2">
            <h1 class="text-2xl font-bold text-center">
                Filmovi
            </h1>
        </div>
        <div class="flex gap-4 flex-wrap mt-8 justify-center">
            {% for movie in movies %}
                <a href="{{ route('movies.show', movie) }}"
                    class="w-60 flex flex-col bg-slate-800 rounded-md overflow-hidden hover:bg-blue-900 hover:transform hover:scale-105 transition duration-200 ease-in-out">
                    <div class="w-full h-80">
                        <img src="{{ asset('/images/' ~ movie.image_url) }}"
                            alt="{{ movie.title }}"
                            class="w-full h-full object-cover" />
                    </div>
                    <div class="p-2 text-center">
                        <p>
                            {{ movie.title }} ({{ movie.release_date.year }})
                        </p>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
