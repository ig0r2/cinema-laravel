{% extends '@components/layout.twig' %}
{% block content %}
    <div class="w-full sm:max-w-md mx-auto p-4 my-8 rounded-md bg-slate-800">
        <p class="text-2xl font-bold text-center mt-4 mb-4">
            Poruka
        </p>
        <div class="flex flex-col gap-4 max-w-lg mx-auto">
            <div class="flex flex-col gap-2">
                <p class="text-gray-400">
                    Naslov
                </p>
                <p>
                    {{ message.subject }}
                </p>
            </div>
            <div class="flex flex-col gap-2">
                <p class="text-gray-400">
                    Sadr≈æaj
                </p>
                <p>
                    {{ message.content }}
                </p>
            </div>
            {% if message.reply is not null %}
                <div class="flex flex-col gap-2">
                    <p class="text-gray-400">
                        Odgovor
                    </p>
                    <p>
                        {{ message.reply }}
                    </p>
                </div>
            {% else %}
                <div class="flex flex-col gap-2">
                    <p class="text-gray-400">
                        Odgovor
                    </p>
                    <p class="text-gray-400">
                        Nema odgovora
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
