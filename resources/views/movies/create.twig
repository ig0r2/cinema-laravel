{% extends '@components/layout.twig' %}
{% block content %}
    <div class="container mx-auto p-4 rounded-md bg-slate-800">
        <form action="{{ route('movies.store') }}"
            method="POST"
            enctype="multipart/form-data">
            {{ csrf_field() }}
            <h2 class="text-lg text-center">
                Dodaj film
            </h2>
            <div>
                <a href="{{ route('movies.index') }}"
                    class="text-gray-400 hover:text-gray-300">
                    Nazad
                </a>
            </div>
            <div class="flex gap-6 justify-center">
                {# Image #}
                <div class="h-full">
                    <label for="image" class="cursor-pointer">
                        <img src="https://placehold.co/200x300/gray/gray/?text=Dodaj sliku za film"
                            alt="Movie image"
                            class="w-full h-full object-cover rounded-md mt-4" />
                    </label>
                    <input type="file" name="image" id="image" class="hidden" />
                    {% if errors.has('image') %}
                        <div class="text-red-500 text-sm mt-1">
                            {{ errors.first('image') }}
                        </div>
                    {% endif %}
                </div>
                <div class="w-full sm:max-w-md">
                    {# Title #}
                    <div class="mt-4">
                        <label for="title">Naziv</label>
                        <input type="text"
                            name="title"
                            id="title"
                            class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                            value="{{ old('title') }}" />
                        {% if errors.has('title') %}
                            <div class="text-red-500 text-sm mt-1">
                                {{ errors.first('title') }}
                            </div>
                        {% endif %}
                    </div>
                    {# Release Date #}
                    <div class="mt-4">
                        <label for="release_date">Datum izlaska</label>
                        <input type="date"
                            name="release_date"
                            id="release_date"
                            class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                            value="{{ old('release_date') }}" />
                        {% if errors.has('release_date') %}
                            <div class="text-red-500 text-sm mt-1">
                                {{ errors.first('release_date') }}
                            </div>
                        {% endif %}
                    </div>
                    {# Runtime #}
                    <div class="mt-4">
                        <label for="runtime">Trajanje</label>
                        <input type="number"
                            name="runtime"
                            id="runtime"
                            class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                            value="{{ old('runtime') }}" />
                        {% if errors.has('runtime') %}
                            <div class="text-red-500 text-sm mt-1">
                                {{ errors.first('runtime') }}
                            </div>
                        {% endif %}
                    </div>
                    {# Description #}
                    <div class="mt-4">
                        <label for="description">Opis</label>
                        <textarea name="description"
                            id="description"
                            class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                            rows="5">
                            {{ old('description') }}
                        </textarea>
                        {% if errors.has('description') %}
                            <div class="text-red-500 text-sm mt-1">
                                {{ errors.first('description') }}
                            </div>
                        {% endif %}
                    </div>
                    {# Genres #}
                    <div class="mt-4">
                        <label for="genres">Žanrovi</label>
                        <select name="genres[]"
                            id="genres"
                            class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                            multiple>
                            {% for genre in genres %}
                                <option value="{{ genre.id }}"
                                    {{
                                    genre.id in old('genres')
                                        ? 'selected'
                                        : ''
                                    }}>
                                    {{ genre.name }}
                                </option>
                            {% endfor %}
                        </select>
                        {% if errors.has('genres') %}
                            <div class="text-red-500 text-sm mt-1">
                                {{ errors.first('genres') }}
                            </div>
                        {% endif %}
                    </div>
                    {# Actors #}
                    <div class="mt-4">
                        <label for="actors">Glumci</label>
                        <select name="actors[]"
                            id="actors"
                            class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                            multiple>
                            {% for actor in actors %}
                                <option value="{{ actor.id }}"
                                    {{
                                    actor.id in old('actors')
                                        ? 'selected'
                                        : ''
                                    }}>
                                    {{ actor.name }}
                                </option>
                            {% endfor %}
                        </select>
                        {% if errors.has('actors') %}
                            <div class="text-red-500 text-sm mt-1">
                                {{ errors.first('actors') }}
                            </div>
                        {% endif %}
                    </div>
                    {# Directors #}
                    <div class="mt-4">
                        <label for="directors">Režiseri</label>
                        <select name="directors[]"
                            id="directors"
                            class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                            multiple>
                            {% for director in directors %}
                                <option value="{{ director.id }}"
                                    {{
                                    director.id in old('directors')
                                        ? 'selected'
                                        : ''
                                    }}>
                                    {{ director.name }}
                                </option>
                            {% endfor %}
                        </select>
                        {% if errors.has('directors') %}
                            <div class="text-red-500 text-sm mt-1">
                                {{ errors.first('directors') }}
                            </div>
                        {% endif %}
                    </div>
                    {# Submit #}
                    <div class="flex mt-4">
                        <input type="submit"
                            value="Dodaj film"
                            class="ms-auto bg-white text-black rounded-md px-4 py-2 hover:bg-blue-500 hover:text-white cursor-pointer" />
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
