{% extends '@components/layout.twig' %}
{% block content %}
    <div class="w-full sm:max-w-md mx-auto p-4 rounded-md bg-slate-800">
        <form action="{{ route('directors.store') }}"
            method="POST"
            enctype="multipart/form-data">
            {{ csrf_field() }}
            <h2 class="text-lg text-center">
                Dodaj režisera
            </h2>
            <div>
                <a href="{{ route('directors.index') }}"
                    class="text-gray-400 hover:text-gray-300">
                    Nazad
                </a>
            </div>
            {# Name #}
            <div class="mt-4">
                <label for="name">Ime i prezime</label>
                <input type="text"
                    name="name"
                    id="name"
                    class="bg-gray-900 text-white rounded-md mt-1 w-full p-2"
                    value="{{ old('name') }}"
                    required />
                {% if errors.has('name') %}
                    <div class="text-red-500 text-sm mt-1">
                        {{ errors.first('name') }}
                    </div>
                {% endif %}
            </div>
            {# Image #}
            <div class="h-full">
                <label for="image" class="cursor-pointer">
                    <img src="https://placehold.co/600x600/gray/gray/?text=Dodaj sliku režisera"
                        alt="Director image"
                        class="w-full h-full object-cover rounded-md mt-4" />
                </label>
                <input type="file" name="image" id="image" class="hidden" />
                {% if errors.has('image') %}
                    <div class="text-red-500 text-sm mt-1">
                        {{ errors.first('image') }}
                    </div>
                {% endif %}
            </div>
            {# Submit #}
            <div class="flex mt-4">
                <input type="submit"
                    value="Dodaj"
                    class="ms-auto bg-white text-black rounded-md px-4 py-2 hover:bg-blue-500 hover:text-white cursor-pointer" />
            </div>
        </form>
    </div>
{% endblock %}
